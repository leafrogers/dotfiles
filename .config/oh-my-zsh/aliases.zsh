alias cob="git checkout -b "
alias com="git checkout main"
alias gC="killall gpg-agent && gpg-agent --daemon --pinentry-program /opt/homebrew/bin/pinentry-mac && cz c"
alias gap="git add -p"
alias gc="cz c"
alias gclean="git cleanup && git branch --merged main | grep -v '^[ *]*main$' | xargs git branch -d && git branches"
alias gp="git pull"
alias gps="git push -u origin head && gh pr create -w"
alias gpsf="git push -u origin head --no-verify --force && gh pr create -w"
alias gs="git status"
alias gsp="git stash pop"
alias gst="git stash -u && gs"
alias gundo="git reset HEAD~"
alias n=fnm
alias rm="trash"
alias upgrade="zsh ~/.config/upgrade.zsh"
alias us="git reset HEAD ."

alias today="vi ~/Desktop/Today"
alias before="vi ~/Desktop/Before"
